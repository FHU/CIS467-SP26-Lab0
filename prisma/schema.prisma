model User {
  id    Int     @id @default(autoincrement())
  name  String?
  email String  @unique
  user_type String

  reviews Review[]

  createdAt DateTime
}

model Review {
  id      Int   @id @default(autoincrement())
  stars   Int
  response String

  reviewer  User @relation(fields: [reviewer_id], references: [id])
  reviewer_id Int
  chapel_session  ChapelSession @relation(fields: [chapel_session_id], references: [id])
  chapel_session_id Int

  createdAt DateTime
}

model ChapelSession {
  id    Int   @id @default(autoincrement())
  topic String
  scripture String
  end_time  DateTime
  date  DateTime
  standing_number Int

  chapel_speaker Speaker  @relation(fields: [speaker_id], references: [id])
  speaker_id  Int
  reviews Review[]

  created_at DateTime
}

model Speaker {
  id    Int   @id @default(autoincrement())
  first_name  String
  last_name   String
  bio   String
  title String
  speaker_type  String
  
  chapel_sessions ChapelSession[]
  created_at  DateTime
}