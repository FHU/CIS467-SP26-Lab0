// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum UserType {
  STUDENT
  FACULTY
  STAFF
  ALUMNI
  GUEST
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  first_name String
  last_name  String
  user_type  UserType
  feedbacks  Feedback[]
}

model Speaker {
  id             Int             @id @default(autoincrement())
  first_name     String
  last_name      String
  bio            String?
  title          String
  user_type      UserType
  chapel_session ChapelSession[]
  feedbacks      Feedback[]
}

model ChapelSession {
  id               Int        @id @default(autoincrement())
  speaker          Speaker    @relation(fields: [speaker_id], references: [id])
  speaker_id       Int
  topic            String
  scripture        String?
  date             DateTime   @default(now())
  end_time         DateTime?
  number_standings Int?
  feedbacks        Feedback[]
}

model Feedback {
  id                Int           @id @default(autoincrement())
  stars             Int
  response          String?
  user              User          @relation(fields: [user_id], references: [id])
  user_id           Int
  chapel_session    ChapelSession @relation(fields: [chapel_session_id], references: [id])
  chapel_session_id Int
  speaker           Speaker?      @relation(fields: [speakerId], references: [id])
  speakerId         Int?
}
