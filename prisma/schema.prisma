// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  first_name String
  last_name String
}

model Task {
  id        Int   @id @default(autoincrement())
  title     String
  completed Boolean @default(false)
}

model Speaker {
  id Int @id @default(autoincrement())
  first_name String
  last_name String
  bio String
  title String
}

model ChapelSession {
  id Int @id @default(autoincrement())
  speaker_id Int
  topic String
  scripture String
  date DateTime
  end_time DateTime
  number_standing Int

}

model Feedback {
  id Int @id @default(autoincrement())
  stars Int
  response String
  user_id Int
  chapel_session_id Int 
}